        <url>jdbc:mysql://localhost:3306/customer?useSSL=false</url>
        <user>appadmin</user>
        <password>admin123</password>
    </data-source>

    <data-source>
        <name>java:app/postgresqlds</name>
        <class-name>org.postgresql.Driver</class-name>
        <url>jdbc:postgresql://localhost:5432/customer</url>
        <user>postgres</user>
